{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADF-LR255021-Streaming"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopyPipeline_h2w')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy_h2w",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "lr255021-weather//"
							},
							{
								"name": "Destination",
								"value": "\"AFP_2021_lr255021\".\"Stream_Agg\""
							}
						],
						"typeProperties": {
							"source": {
								"type": "JsonSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"wildcardFolderPath": "device1",
									"wildcardFileName": "*",
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "JsonReadSettings"
								}
							},
							"sink": {
								"type": "OdbcSink",
								"writeBatchSize": 0
							},
							"enableStaging": false,
							"parallelCopies": 1,
							"validateDataConsistency": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"path": "deviceId"
										},
										"sink": {
											"name": "deviceId",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "AVERAGE_TEMP"
										},
										"sink": {
											"name": "AVERAGE_TEMP",
											"type": "Double"
										}
									},
									{
										"source": {
											"path": "AVERAGE_HUMIDITY"
										},
										"sink": {
											"name": "AVERAGE_HUMIDITY",
											"type": "Double"
										}
									},
									{
										"source": {
											"path": "Time"
										},
										"sink": {
											"name": "TimeEntered",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "RowCount"
										},
										"sink": {
											"name": "RowCount",
											"type": "Int32"
										}
									}
								],
								"mapComplexValuesToString": false
							}
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_h2w",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_h2w",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_h2w')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_h2w')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorage1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"folderPath": "device1",
						"container": "lr255021-weather"
					}
				},
				"schema": {}
			},
			"dependsOn": []
		}
	]
}